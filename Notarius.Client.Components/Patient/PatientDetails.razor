@inherits PatientDetailsBase

@if (!Saved)
{
<section class="patientdetail">
    <h1 class="page-title">Patient Details: @Patient.Firstname @Patient.Lastname</h1>
    <EditForm Model="@Patient" OnValidSubmit="@HandleValidSubmit"
              OnInvalidSubmit="@HandleInvalidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary>

        </ValidationSummary>
        <div class="form-group" row>
            <label for="first" class="col-sm-3">Firts name: </label>
            <InputText id="first" class="form-control col-sm-8" @bind-Value="@Patient.Firstname"
                       laceholder="Enter first name" @onkeydown="DataChanged" p></InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Patient.Lastname)" />
        </div>
        <div class="form-group" row>
            <label for="last" class="col-sm-3">City: </label>
            <InputText id="last" class="form-control col-sm-8" @bind-Value="@Patient.Lastname" @onkeydown="DataChanged" placeholder="Enter last name"></InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Patient.Lastname)" />
        </div>
        <div class="form-group" row>
            <label for="address" class="col-sm-3">Address: </label>
            <InputText id="address" class="form-control col-sm-8" @bind-Value="@Patient.Address"
                       laceholder="Enter street address" @onkeydown="DataChanged" p></InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Patient.Address)" />
        </div>
        <div class="form-group" row>
            <label for="city" class="col-sm-3">City: </label>
            <InputText id="city" class="form-control col-sm-8" @bind-Value="@Patient.City" @onkeydown="DataChanged" placeholder="Enter city"></InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Patient.City)" />
        </div>
        <div class="form-group" row>
            <label for="state" class="col-sm-3">State: </label>
            <InputText id="state" class="form-control col-sm-8" @bind-Value="@Patient.State" @onkeydown="DataChanged" placeholder="Enter State"></InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Patient.State)" />
        </div>
        <div class="form-group" row>
            <label for="zip" class="col-sm-3">Zip: </label>
            <InputText id="zip" class="form-control col-sm-8" @bind-Value="@Patient.Zip"
                       placeholder="Enter Zip code" @onkeydown="DataChanged">
                >
            </InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Patient.Zip)" />

        </div>

    </EditForm>
    <div class="col-md-4 mt-1">
        <button class="btn btn-primary" disabled="@SaveButtonDisabled"
                @onclick="SaveClick">
            Save
        </button>
    </div>

</section>
}
else
{
    <div class="alert @StatusClass">@Message</div>
}